
@{
    ViewData["Title"] = "Contact";
}

<h1>Contact</h1>
<!--method post will run HTTPpost instead of HttpGet-->
<form method="post" asp-action="Contact" asp-controller="Support">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" > <!--name = SupportController parameters -->

        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Example textarea</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" ></textarea><!--name = SupportController parameters -->
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

